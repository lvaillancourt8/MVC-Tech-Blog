{{!-- create an account page --}}
<div class="row justify-space-between-md">
  <div class="login-card">
    <h2 class="page-title">Create an Account</h2>
    <form class="form signup-form" id="signup-form">
      <div class="form-group">
        <label for="username-signup">Username:</label>
        <input class="form-input" type="text" id="username-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup">Email:</label>
        <input class="form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input class="form-input" type="password" id="password-signup" />
        <p>Password must be at least 6 characters</p>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Sign Me Up!</button>
      </div>
    </form>
  </div>
  <a href="/login">Already have an account? Click here to sign in.</a>
</div>

<script src="/js/signup.js"></script>