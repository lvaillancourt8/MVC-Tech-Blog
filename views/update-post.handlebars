{{!-- page to update a post --}}
<div class="row justify-space-between-md">
  <div class="new-post-card">
    <h2 class="page-title">Update this post</h2>
    <form class="form post-form" id="post-form">
      <div class="form-group">
        <input type="hidden" id="post-id" value="{{post.id}}" />
        <label for="post-title">Post Title:</label>
        <input class="form-input" type="text" id="post-title" value="{{post.title}}"/>
      </div>
      <div class="form-group">
        <label for="post-text">Post Content:</label>
        <textarea class="form-control rounded-0" id="post-text" rows="8">{{post.contents}}</textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Update</button>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" id="deleteButton">Delete</button>
      </div>
      
    </form>
  </div>


<script src="/js/update-post.js"></script>