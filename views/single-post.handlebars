{{!-- page to render a single post with comments --}}
<div class="card border-dark">
  <div class="card-body">
    <h5 class="card-title">{{post.title}}</h5>
    <h6 class="card-subtitle mb-2 text-muted">Written by: {{post.user.username}} | Posted On: {{format_date post.post_date_created}}</h6>
    <p class="card-text">{{post.contents}}</p>
  </div>
</div>

{{#each post.comments}}
<div class="card border-light">
  <div class="card-body">
    <h5 class="card-title">Comment</h5>
    <h6 class="card-subtitle mb-2 text-muted">Written by: {{user.username}} | Posted On: {{format_date this.comment_date_created}}</h6>
    <p class="card-text">{{this.comment}}</p>
  </div>
</div>
{{/each}}

{{#unless loggedIn}}
<p>Want to leave a comment?</p>
<p><a href="/login">Login</a> or <a href="/signup">sign up for an account</a></p> 
{{/unless}}

{{#if loggedIn}}
<div class="row justify-space-between-md">
  <div class="comment-card">
    <h2 class="page-title">Leave a Comment</h2>
    <form class="form comment-form" id="comment-form">
      <div class="form-group">
        <input type="hidden" id="post-id" value="{{post.id}}" />
        <label for="text-comment">Enter your comment here:</label>
        <input class="form-input" type="text" id="text-comment" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Submit</button>
      </div>
    </form>
  </div>
  {{/if}}

<script src="/js/comment.js"></script>