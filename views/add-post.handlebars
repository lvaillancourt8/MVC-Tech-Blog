<div class="row justify-space-between-md">
  <div class="new-post-card">
    <h2 class="page-title">Publish a New Post</h2>
    <form class="form post-form">
      <div class="form-group">
        <label for="post-title">Post Title:</label>
        <input class="form-input" type="text" id="post-title" />
      </div>
      <div class="form-group">
        <label for="post-text">Post Content:</label>
        <textarea class="form-control rounded-0" id="post-text" rows="8"></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Submit</button>
      </div>
    </form>
  </div>


<script src="/public/js/new-post.js"></script>